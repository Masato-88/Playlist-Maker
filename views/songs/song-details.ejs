<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `${song.name} | Tune List`}) %>
    <link rel="stylesheet" href="/styles/song-details.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <img src="<%= song.photo %>">
        <h2 class="song-name"><%= song.name %></h2>
        <section>
            <p><strong>Name:</strong> <%= song.name %></p>
            <p><strong>Artist:</strong> <%= song.artist %></p>
            <p><strong>Album:</strong> <%= song.album %></p>
            <p><strong>Duration:</strong> <%= song.timeLength%></p>
        </section>

        <section class="actions">
            <button class="btn"><a href="/songs/<%= song._id %>/edit">Edit</a></button>
            <form method="POST" action="/songs/<%= song._id %>?_method=DELETE">
                <input class="btn" type="submit" value="Delete" />
            </form>
        </section>
        
    </div>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
